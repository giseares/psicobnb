<% if current_user.professional?  %>
  <% @appointments.each do |appointment| %>
    <div class="card">
    <%# Profesional: Cliente.name / Dia / Hora /  Status / Boton para aprobar-cancelar %>
      <p><%= appointment.client.first_name %></p> 
      <p><%= appointment.appointment_date %></p>
      <p><%= appointment.start_hour %></p>
        <% if appointment.status = "Pendiente"  %>
    
        <% end %>
    <% end %>
     </div>
    <%end%>
<%else%> 
  <% @appointments.each do |appointment| %>
  <%# Cliente: Profesional.name / Dia / Hora /  Status %>
    <div class="card">
      <p><%= appointment.professional.first_name %></p> 
      <p><%= appointment.appointment_date %></p>
      <p><%= appointment.start_hour %></p>
      <p><%= appointment.status %></p>
    </div>
  <%end%>
<%end%>

</div>
