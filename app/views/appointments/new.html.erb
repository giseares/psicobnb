<div class="container">
  <h1> Ver todas las citas <h1>
  
  <%= simple_form_for([@user, @appointment]) do |f| %> 
    <%= f.input :appointment_date, label: "Elija el dia", wrapper_html: { class: 'flex-select' }, as: :date, html5: true %>   
    <!-- deplegable de horios-->
    <%= f.input :start_hour, label: "Eliga el horario"  %>
      <% if f.appointment.date > Date.today %>
        <h4>NO</h4>
      <% end %>
    <%= f.submit class:"btn btn-dark" %>
  <% end %>
<%= link_to "Lista de citas", appointments_path %>

</div>
<% console %>
