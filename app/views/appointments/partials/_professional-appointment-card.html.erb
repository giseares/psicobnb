<div class="card-appointment">      
  <table class="table text-center">
    <tr>
      <th scope="col">Paciente</th>
      <th scope="col">Fecha</th>
      <th scope="col">Hora</th>
      <th scope="col">Estado</th>
      <th scope="col">Honorarios</th>
    </tr>
    <tr>
      <td scope="row"><%= appointment.client.first_name %></td>
      <td scope="row"><%= appointment.appointment_date %></td>
      <td scope="row"><%= appointment.start_hour %>:00 hs.</td>
      <td scope="row">
        <% if Date.today > appointment.appointment_date && appointment.status == "Aceptada" %>
          <%= "Finalizada" %>
        <% else %>
          <%= appointment.status %>
        <% end %></td>
      <td scope="row">$<%= appointment.session_price %>.00</td>          
    </tr>
  </table>
  <%= simple_form_for(appointment) do |f| %> 
    <% if appointment.status == "Pendiente" %>
      <%= f.input :status, collection: %w[Aceptada Rechazada], include_blank: false ,label: "Elija nuevo Status"  %>
      <%= f.submit class:"btn btn-dark" %>
    <% else %>
      <h4>No podes cambiar</h4>
    <% end %>    
  <% end %>
  <% if appointment.review.present? %>
    <div>
      <h4><strong>Review:</strong></h4>
      <p>Puntualidad: <%= appointment.review.rating_sharp  %></p>
      <p>Precio/Calidad: <%= appointment.review.rating_qualityprice  %></p>
      <p>Instalaciones: <%= appointment.review.rating_facilities  %></p>
    </div>
  <% else %>
    <p>Todavia no se han generado reviews</p>
  <% end %>
</div>
