<div class="container display: flex">
  <h2>Mi listado </h2>
  <div class="row">
      <% @appointments.each do |appointment| %>
        <div class="card">
          <% if appointment.review.present? %>
            <span><%= "*" * appointment.review.rating_sharp  %></span>
          <% else %>
            <%= link_to "Crear Review", new_appointment_review_path(appointment)  %>
          <% end %>
          <h2>Profesional: <strong> </strong></h2>
          </h2> <p><%= appointment.professional.first_name %></p> 
          <h2>Fecha: <strong> </strong> </h2>
          <p><%= appointment.appointment_date %></p>
          <h2>Hora: <strong> </strong> </h2>
          <p><%= appointment.start_hour %></p>
          <p><%= appointment.status %></p>
        </div>
      <%end%>

      </div>
  </div>
</div>
<%= console %>

